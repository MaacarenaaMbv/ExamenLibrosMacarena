@using System.Security.Claims
<h1>
    Perfil del Sr/Sra: @Context.User.Identity.Name
</h1>

<ul class="list-group">
    <li class="list-group-item">
        <img src="~/images/@Context.User.FindFirst("Foto").Value" alt="Descripción de la imagen" style="width:150px; height:150px">
    </li>
    <li class="list-group-item">
        Apellidos: @Context.User.FindFirst("Apellidos").Value
    </li>
    <li class="list-group-item">
        Email: @Context.User.FindFirst("Email").Value
    </li>
</ul>
<h2>Todos los Claims</h2>
<ul>
    @foreach (Claim claim in Context.User.Claims)
    {
        <li>@claim.Type: <b>@claim.Value</b></li>
    }
</ul>