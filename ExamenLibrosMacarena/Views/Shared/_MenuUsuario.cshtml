@if (Context.User.Identity.IsAuthenticated == false)
{
    <li class="nav-item">
        <a asp-controller="Libros" asp-action="PerfilUsuario" class="nav-link">
            Log In
        </a>
    </li>
}
else
{
    <li class="nav-item">
        <a asp-controller="Managed" asp-action="LogOut" class="nav-link">
            Log Out <span style="color:deeppink"> @Context.User.Identity.Name</span>
        </a>
    </li>
    <li class="nav-item">
        <a asp-controller="Libros" asp-action="PerfilUsuario" class="nav-link">
            Mi perfil
        </a>
    </li>
    <li class="nav-item">
        <a asp-controller="Libros" asp-action="PedidosUsuario" class="nav-link">
            Mis pedidos
        </a>
    </li>
}